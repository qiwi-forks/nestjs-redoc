{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src/",
    "module": "commonjs",
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./src/**/*.spec.ts"
  ]
}
